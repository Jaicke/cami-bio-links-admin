<div class="container">
  <div class="auth-box">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { "data-turbo": "false" }) do |f| %>
      <%= render  "layouts/shared/alerts" %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail', required: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Senha', required: true %>
      </div>

      <!--
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      -->
      <div class="actions">
        <%= f.submit "Entrar" %>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %>
  </div>
</div>

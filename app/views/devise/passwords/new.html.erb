<div class="container">
  <div class="auth-box">
    <p>Digite seu e-email para receber um link de alteraÃ§Ã£o de senha.</p><br/>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= render  "layouts/shared/alerts" %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail' %>
      </div>

      <div class="actions">
        <%= f.submit "Confirmar" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

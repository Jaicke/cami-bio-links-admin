<div class="container">
  <div class="auth-box">
    <h4>Mude sua senha</h4><br/>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { "data-turbo": "false", method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: 'Nova Senha' %>
        <% if @minimum_password_length %>
          <small>(Mínimo de <%= @minimum_password_length %> caracteres)</small><br />
        <% end %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirmação' %>
      </div>

      <div class="actions">
        <%= f.submit "Mudar senha" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
